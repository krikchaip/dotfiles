// Place your key bindings in this file to override the defaults
[
  {
    "command": "workbench.action.terminal.kill",
    "key": "cmd+w",
    "when": "terminalFocus"
  },
  {
    "key": "alt+[KeyG]",
    "command": "workbench.view.scm"
  },
  {
    "key": "ctrl+shift+g",
    "command": "-workbench.view.scm"
  },
  {
    "key": "alt+[KeyE]",
    "command": "workbench.view.explorer"
  },
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer"
  },
  {
    "key": "alt+[KeyT]",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "cmd+down",
    "command": "-workbench.action.terminal.focus"
  }
]
// vim:ft=jsonc